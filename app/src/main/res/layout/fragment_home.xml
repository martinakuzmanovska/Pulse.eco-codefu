<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:orientation="horizontal"
        android:padding="16dp">

        <!--        <ImageView-->
        <!--            android:id="@+id/logo"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:src="@drawable/ic_logo" />-->

        <ImageView
            android:id="@+id/globe_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_globe" />

        <TextView
            android:id="@+id/user_full_name"
            android:layout_width="213dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:gravity="top"
            android:text=""
            android:visible="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_info"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@id/header"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:orientation="vertical">


            <TextView
                android:id="@+id/location_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:text="18:32"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/caqi_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:text="31 CAQI"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/air_quality_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Great air here today!"
                android:textColor="#4CAF50"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/smile_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@drawable/ic_smile" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/metrics_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_info"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="126dp"
            android:layout_weight="1"
            android:background="@drawable/metric_background"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pm10_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM10"
                android:textColor="#888"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pm10_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 µg/m³"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="126dp"
            android:layout_weight="1"
            android:background="@drawable/metric_background"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pm25_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM25"
                android:textColor="#888"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pm25_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 µg/m³"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="126dp"
            android:layout_weight="1"
            android:background="@drawable/metric_background"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/noise_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOISE"
                android:textColor="#888"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/noise_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52 dBA"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="368dp"
        android:layout_height="205dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="443dp"
        android:background="#ccc" />


</RelativeLayout>
