<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4CAF50"
        android:padding="16dp">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_logout" />

        <TextView
            android:id="@+id/profile_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="My Profile"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/globe_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_globe"
/>
    </LinearLayout>

    <!-- Profile Info Section -->
    <LinearLayout
        android:id="@+id/profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="133dp"
            android:layout_height="137dp"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:src="@drawable/ic_user_avatar" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="BISERA GALESKA"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4B9643" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background_dark_green"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/points_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_points" />

            <TextView
                android:id="@+id/points_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="348 Points"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <!-- Action Buttons Section -->
    <LinearLayout
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_info"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Purchase History Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background_green"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/purchase_history_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_purchase_history" />

            <TextView
                android:id="@+id/purchase_history_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Purchase History"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Change Password Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background_green"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/change_password_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_change_password" />

            <TextView
                android:id="@+id/change_password_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Change Password"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Badges Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background_green"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/badges_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_badges" />

            <TextView
                android:id="@+id/badges_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Badges"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Log Out Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background_green"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/logout_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_logout" />

            <TextView
                android:id="@+id/logout_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Log Out"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
